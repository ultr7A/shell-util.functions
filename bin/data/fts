#!/bin/bash
#▔▔▔▔▔▔▔▔▔▔▔

 ##	
	
	export leftCut="$3";
	export SEARCH_PATH="$2";

	if [ -z "$3" ]
	then
		leftCut="25-";
		if [ -z "$2" ]
		then
			SEARCH_PATH="$(pwd)";
		fi
	
	fi

	if [ $# -eq 0 ]
	then
		echo "Command requires at minimum, a 'search phrase'."
	fi

	echo "Search_Path = $SEARCH_PATH"; 
	echo "search_text = $1";
	pushd "$SEARCH_PATH";
   	#clear 	                    &&
   	find . -type f -exec egrep -iE -IH -A3 -B1 --color "'$1'" {} \;
#        | cut   -c $leftCut;
	popd;

 ##